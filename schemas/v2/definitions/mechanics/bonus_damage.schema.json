{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://spellcasters.gg/schemas/v2/definitions/mechanics/bonus_damage.schema.json",
  "title": "Bonus Damage",
  "description": "Additional damage against specific targets.",
  "definitions": {
    "bonus_damage": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["value", "unit", "target_types"],
        "properties": {
          "value": { "type": "number" },
          "unit": { "$ref": "../enums.schema.json#/definitions/calculation_unit_enum" },
          "target_types": { 
            "type": "array",
            "items": { "$ref": "../enums.schema.json#/definitions/target_type_enum" } 
          }
        },
        "additionalProperties": false
      }
    }
  }
}
