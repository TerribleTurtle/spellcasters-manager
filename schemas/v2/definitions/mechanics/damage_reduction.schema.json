{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://spellcasters.gg/schemas/v2/definitions/mechanics/damage_reduction.schema.json",
  "title": "Damage Reduction",
  "description": "Damage mitigation logic.",
  "definitions": {
    "damage_reduction": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source_type", "multiplier"],
        "properties": {
          "source_type": { "$ref": "../enums.schema.json#/definitions/source_type_enum" },
          "multiplier": { "type": "number", "minimum": 0 },
          "condition": {
            "type": "object",
            "required": ["field", "operator", "value"],
            "properties": {
              "field": { "type": "string" },
              "operator": { "$ref": "../enums.schema.json#/definitions/comparison_operator_enum" },
              "value": {} 
            },
            "additionalProperties": false
          },
          "_comment": { "type": "string", "description": "Internal notes (e.g., unconfirmed data)." }
        },
        "examples": [
          {
            "source_type": "Spell",
            "multiplier": 0.5,
            "condition": "element == 'Fire'"
          }
        ],
        "additionalProperties": false
      }
    }
  }
}
