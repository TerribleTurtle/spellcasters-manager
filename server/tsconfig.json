{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "../dist/server",
    "rootDir": "../",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "express", "multer"],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts", "../src/types/**/*.ts", "../src/domain/**/*.ts", "./types/**/*.d.ts"],
  "exclude": ["../src/domain/schemaToFields.ts"]
}
